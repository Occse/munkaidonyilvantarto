<resources>

    <style name="Base.Theme.MunkaidoNyilvantartoAlkalmazas" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="WorkerDetails" parent="TextAppearance.AppCompat.Subhead" />
    <style name="WorkerName" parent="TextAppearance.AppCompat.Headline" />
    <style name="WorkerDetail" parent="TextAppearance.AppCompat.Headline" />

    <style name="blackText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="Theme.MunkaidoNyilvantartoAlkalmazas.Default" parent="Base.Theme.MunkaidoNyilvantartoAlkalmazas">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skyblue</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/whitesmoke</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skyblue</item>
        <item name="colorSecondaryVariant">@color/teal</item>/
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="Theme.MunkaidoNyilvantartoAlkalmazas.Miami" parent="Base.Theme.MunkaidoNyilvantartoAlkalmazas">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skybluedark</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/whitesmoke</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skybluedark</item>
        <item name="colorSecondaryVariant">@color/teal</item>/
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:windowBackground">#3FAEC9</item>
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>
</resources>